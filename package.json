{
	"name": "sndg1",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"preview": "vite preview",
		"build": "vite build",
		"clean": "rm -rf node_modules .svelte-kit build package-lock.json",
		"reinstall": "npm run clean && npm install",
		"firebase:login": "firebase login",
		"firebase:init": "firebase init",
		"deploy:staging": "npm run build && firebase deploy --only hosting",
		"deploy:prod": "npm run build && firebase deploy --only hosting -P production",
		"build+deploy": "npm run build && npm run deploy:prod",
		"build+run": "npm run build && npm run preview",
		"setup": "npm install && npm run firebase:login",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"autoprefixer": "^10.4.19",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"postcss": "^8.4.38",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.3",
		"typescript": "^5.0.0",
		"vite": "^6.2.1",
		"vitest": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"@eslint/eslintrc": "^9.0.0"
	},
	"dependencies": {
		"@supabase/supabase-js": "^2.49.1",
		"@sveltejs/adapter-static": "^3.0.8"
	}
}
